						<!-- <td class="border border-dark text-center"></td>
						<td class="border border-dark text-center"></td> -->
						<td class="border border-dark" style="text-align:right; padding-right:3%;" colspan="1">Rp {{(1*form.uang_transport_dilokasi).toLocaleString('id-ID')}}</td>
					</tr>
					<tr class="border border-dark" style="font-size:10px;">
						<td class="border border-dark text-center">X.1.7</td>
						<td class="border border-dark" colspan="4" style="padding-left:2%;">TICKET</td>
						<!-- <td class="border border-dark text-center"></td>
						<td class="border border-dark text-center"></td> -->
						<td class="border border-dark" style="text-align:right; padding-right:3%;" colspan="1">Rp {{(1*form.uang_tiket).toLocaleString('id-ID')}}</td>
					</tr>
					<tr class="border border-dark" style="font-size:10px;">
						<td class="border border-dark text-center">X.1.8</td>
						<td class="border border-dark" colspan="4" style="padding-left:2%;">COMMUNICATION</td>
						<!-- <td class="border border-dark text-center"></td>
						<td class="border border-dark text-center"></td> -->
						<td class="border border-dark" style="text-align:right; padding-right:3%;" colspan="1">Rp {{(1*form.uang_komunikasi).toLocaleString('id-ID')}}</td>
					</tr>
					<tr class="border border-dark" style="font-size:10px;">
						<td class="border border-dark text-center">X.2</td>
						<td style="font-style: italic;padding-left:1%;" colspan="5"><strong>TO THE AIRPORT</strong></td>
						<td class="border border-dark" style="text-align:right; padding-right:3%;" >Rp {{(1*form.airport).toLocaleString('id-ID')}}</td>
					</tr>
					<tr class="border border-dark" style="font-size:10px;">
						<td class="border border-dark text-center">X.3</td>
						<td style="font-style: italic;padding-left:1%;" colspan="6" style="padding-left:2%;"><strong>ETC</strong></td>
					</tr>
					@if(form.lain && Array.isArray(form.lain) && form.lain.length > 0)
            @each((lainlain, index) in form.lain)
						<tr class="border border-dark" style="font-size:10px;">
							@if(index==0)
							<td class="border border-dark text-center" rowspan="{{form.lain.length}}"></td>
							@endif
							<td class="border border-dark text-center">X.3.{{index+1}}</td>
							<td class="border border-dark" colspan="3" style="padding-left:2%;">{{lainlain.datalain}}</td>
							<!-- <td class="border border-dark text-center"></td>
							<td class="border border-dark text-center"></td> -->
							<td class="border border-dark" style="text-align:right; padding-right:3%;" colspan="2">Rp {{(1*lainlain.nilailain).toLocaleString('id-ID')}}</td>
						</tr>
            @end
					@endif
					<tr class="border border-dark" style="font-size:10px;">
						<!-- <td></td> -->
						<td class="border border-dark text-center" style="font-style: italic;" colspan="5"><strong>TOTAL</strong></td>
						<!-- <td colspan="3"></td> -->
						<td class="border border-dark" style="text-align:right; padding-right:3%;" colspan="3" >Rp {{(1*form.total).toLocaleString('id-ID')}}</td>
					</tr>
					<tr class="border border-dark" style="font-size:10px;">
						<!-- <td></td> -->
						<td class="border border-dark text-center" style="font-style: italic;" colspan="5"><strong>DOWN PAYMENT</strong></td>
						<!-- <td colspan="3"></td> -->
						<td class="border border-dark" style="text-align:right; padding-right:3%;" colspan="3" >Rp {{(1*form.panjar.total_panjar).toLocaleString('id-ID')}}</td>
					</tr>
					<tr class="border border-dark" style="font-size:10px;">
						<!-- <td></td> -->
						<td class="border border-dark text-center" style="font-style: italic;" colspan="5"><strong>FINAL</strong></td>
						<!-- <td colspan="3"></td> -->
						<td class="border border-dark" style="text-align:right; padding-right:3%;font-weight:bold;" colspan="3">Rp {{(1*form.total - form.panjar.total_panjar).toLocaleString('id-ID')}}</td>
					</tr>
			</tbody>
		</table>
		<table width="100%" class="mt-5">
			<thead>
				<tr>
					<td width="60%">
						<label style="font-size:11px;"></label>
					</td>
					<td class="text-center">
						<label style="font-size:11px;">Sign by Personalia: <strong style="font-style:italic;">GA Administrator</strong></label>
					</td>
				</tr>
			</thead>
		</table>
